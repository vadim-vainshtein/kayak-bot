<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1722800120903-1" author="dima">
        <createTable tableName="user_">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user_"/>
            </column>
            <column name="username" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="TEXT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1722800120903-2" author="dima">
        <createTable tableName="user_token">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user_token"/>
            </column>
            <column name="token" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT"/>
        </createTable>
    </changeSet>
    <changeSet id="1722800120903-3" author="dima">
        <addUniqueConstraint columnNames="username" constraintName="uc_user__username" tableName="user_"/>
    </changeSet>
    <changeSet id="1722800120903-4" author="dima">
        <addUniqueConstraint columnNames="token" constraintName="uc_user_token_token" tableName="user_token"/>
    </changeSet>
    <changeSet id="1722800120903-5" author="dima">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="user_token"
                                 constraintName="FK_USER_TOKEN_ON_USER" referencedColumnNames="id"
                                 referencedTableName="user_"/>
    </changeSet>

</databaseChangeLog>